<i class="fas fa-times btn-cocktail-sm" id="close-form"></i>
<% @cocktail = Cocktail.new if action_name == 'show' %>
<%= simple_form_for @cocktail do |f| %>
  <%= f.input :name, label: false, placeholder: "Cocktail Name" %>
  <%= f.input :photo, as: :file, label: false %>
  <%= f.button :submit, class: 'btn-cocktail' %>
<% end %>
