<div class="new-dose-card">
  <h5>Add an ingredient to your <%= @cocktail.name %></h5>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient, label: false, prompt: "Choose ingredient" %>
    <%= f.input :description, label: false, placeholder: "Amount" %>
    <%= f.button :submit, '+ add ingredient', class: 'btn-cocktail-sm' %>
  <% end %>
</div>
